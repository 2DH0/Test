document.addEventListener("DOMContentLoaded", function() {
    // JavaScript code for displaying selected photo
    document.getElementById("photo").addEventListener("change", function(e) {
        let reader = new FileReader();
        reader.onload = function() {
            let output = document.getElementById('photoPreview');
            output.src = reader.result;
        };
        reader.readAsDataURL(e.target.files[0]);
    });

    // Display tutor profile photo in photoPreview
    let tutorPhoto = "<?php echo $tutorProfile['photo']; ?>";
    let photoPreview = document.getElementById('photoPreview');
    photoPreview.src = "../Web-Phase2/tutorImages/" + tutorPhoto;
});
